{% extends "base.html.twig" %}

{% block title %}
    Exchange Rates
{% endblock %}

{% block body %}

    <div class="card p-5">
        <h1 class="card-title">Euro foreign exchange reference rates</h1>
        <p class="card-text text-muted ps-3">Currency unit for 1 euro</p>

        <div class="py-3 table-responsive">
            <table id="exchange_rate_table" class="table table-hover display py-3" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>Currency</th>
                        {% for date in dates %}
                            <th>{{ date }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for currency, rates in exchangeRate %}
                    <tr onclick="window.location='{{ path('currency', {code: currency}) }}';" class="cursor-pointer">
                        <td>
                            <span class="currency">
                                {{ currency }}
                            </span>
                        </td>
                        {% for rate in rates %}
                            <td>{{ rate }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                <tfoot>
                <tr>
                    <th>Currency</th>
                    {% for date in dates %}
                        <th>{{ date }}</th>
                    {% endfor %}
                </tr>
                </tfoot>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('exchange_rate_list') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
